name: Python 3.11.13 app. aws test with github Action
on: [push]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Set up Python 3.11.13
      uses: actions/setup-python@v1
      with:
        python-version: 3.11.13
    - name: Install dependencies
      run:
        make install-aws
    - name: Lint with Pylnt
      run:
        make lint
    - name: Test wth Pytest
      run:
        make test
    - name: Format code with Python
      run:
        make format
